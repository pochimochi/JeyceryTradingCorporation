@model JeyceryTradingCorporation.Models.Category

@{
    ViewBag.Title = "Create a Category";
    Layout = "";
}


@using (Ajax.BeginForm("Create", "Categories", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Table", OnSuccess = "Success();" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control clear", autocomplete="off" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">                
                <div onclick="CreateConfirmation()" value="Create" class="btn btn-success">
                    Create <span class="bi-pencil-square"></span>
                </div>
            </div>
        </div>
    </div>
}


